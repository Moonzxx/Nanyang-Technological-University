#VRML V2.0 utf8
#polygon mesh example: a pyramid

Background {skyColor 0 0 0}


Shape {
	appearance Appearance{
		material Material { 
			diffuseColor     0 1 1   #red=1, green=0, blue=0
			specularColor    1 1 1	 #red=1, green=1, blue=1
			transparency 0   # try values between 0 and 1, 0 is not transparent, 1 is solid
			shininess 1      # shiny surface, try values between 0 and 1
			}
		}
	geometry IndexedFaceSet {
		coord Coordinate {
                    point [
				# Bottom Cuboid Vertices
				1.0  -1.0   1.0,	#vertex 0
				-1.0  -1.0   1.0,	#vertex 1
				-1.0  -1.0	-1.0,#vertex 2
				1.0  -1.0	-1.0	#vertex 3

				# Top Cuboid Vertices
				1.0  2.0   1.0,	#vertex 4
				-1.0  2.0   1.0,	#vertex 5
				-1.0  2.0   -1.0,	#vertex 6
				1.0  2.0   -1.0,	#vertex 7
				
                    ]
                }
		coordIndex [
			#bottom square
			 0,1,2,3,   -1,
			 4,7,6,5,-1,
			 0,4,5,1,-1,
			 2,6,7,3,-1,
			 1,5,6,2,-1,
			 3,7,4,0,-1,
			 

			]
			
	}
}
